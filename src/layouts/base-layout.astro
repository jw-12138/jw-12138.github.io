---
import GlobalStyle from "../components/global-style.astro"
import Footer from "../components/footer.astro"
import Header from "../components/header.astro"
import Nav from "../components/nav.astro"
import Meta from "../components/meta.astro"
import Og from "../components/og.astro"

let {highlight} = Astro.props

if (!highlight) {
  try {
    highlight = Astro.props.frontmatter.highlight
  } catch (e) {
    highlight = ''
  }
}

const {isEn} = Astro.props?.frontmatter || {isEn: false}
---

<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="generator" content={Astro.generator}/>
  <title>一个球的博客</title>
  <GlobalStyle/>
  <Meta/>
  <Og title="一个球的博客" path="/"/>
  {
    isEn &&
    <style>
      h1 {
        font-family: "DM Serif Text", serif
      }

      h2 {
        font-family: "DM Serif Text", serif
      }

      h3 {
        font-family: "DM Serif Text", serif
      }
    </style>
  }
</head>
<body>
<a
  class="absolute left-[-9999px] focus:left-[20px] top-[20px] bg-black px-4 py-2 dark:bg-white dark:text-black text-white"
  href="#app">Jump to the main content</a
>
<aside>
  <Header/>
  <Nav highlight={highlight}/>
  <Footer aside={true}/>
</aside>
<main>
  <div id="app">
    <slot/>
  </div>
  <Footer/>
</main>
</body>
</html>
