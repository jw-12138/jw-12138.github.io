---
import GlobalStyle from "../components/global-style.astro"
import Footer from "../components/footer.astro"
import Header from "../components/header.astro"
import Nav from "../components/nav.astro"
import Meta from "../components/meta.astro"
import Og from "../components/og.astro"

let {pageName} = Astro.props
---

<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="generator" content={Astro.generator}/>
  <title>一个球的博客</title>
  <GlobalStyle/>
  <Meta/>
  <Og title="一个球的博客" path="/"/>
  <style lang="scss">
    html,
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', serif;
      tab-size: 2;
      overflow-x: hidden;
      @apply bg-[#fafaf8] text-[#141413] dark:bg-[#141413] dark:text-[#fafaf8] min-w-[320px];
    }

    aside {
      @apply lg:w-[14rem] w-full lg:fixed lg:top-0 lg:left-0 lg:h-[100vh] md:px-6 px-4 overflow-auto lg:pb-[2rem] pb-0;
    }

    main {
      @apply lg:w-[calc(100vw-14rem)] relative lg:ml-[14rem] w-full lg:px-0 px-4;
    }

    #app {
      @apply w-full max-w-[42rem] px-0 mx-auto lg:pb-[5rem] pb-0;
    }

    img {
      @apply max-w-full mb-6 block mx-auto rounded-xl;
    }
  </style>
</head>
<body>
<div id="linkCover"></div>
<a class="absolute left-[-9999px] focus:left-[20px] top-[20px] bg-black text-white px-4 py-2 dark:bg-white dark:text-black" href="#app">跳转至正文区域</a>
<aside>
  <Header/>
  <Nav highlight={pageName === 'index' ? 'index' : ''}/>
  <Footer aside={true}/>
</aside>
<main>
  <div id="app">
    <slot/>
  </div>
  <Footer/>
</main>
</body>
</html>
