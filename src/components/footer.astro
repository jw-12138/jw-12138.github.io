---
const year = new Date().getFullYear()

let {aside} = Astro.props
---

<footer class="opacity-70 hover:opacity-90 transition-all duration-500 text-xs py-[4rem] text-center" class:list={{
  "lg:hidden": !aside,
  "lg:block hidden": aside
}}>
  <div class="flex" class:list={{
    "justify-center": !aside
  }}>
    <div class="" class:list={{
      "justify-center flex items-center": !aside
    }}>
      <a href="/atom.xml" class:list={{
        "mx-2 flex justify-center items-center gap-1": !aside,
        "mr-1 block mb-2 flex items-center gap-1": aside
      }} aria-label="RSS">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-rss w-5 h-5">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M5 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"/>
          <path d="M4 4a16 16 0 0 1 16 16"/>
          <path d="M4 11a9 9 0 0 1 9 9"/>
        </svg>
        <span>RSS</span>
      </a>
      <a href="https://twitter.com/jw1dev" target="_blank" class:list={{
        "mx-2 flex justify-center items-center gap-1": !aside,
        "mr-1 block mb-2 flex items-center gap-1": aside
      }} aria-label="Follow me on Twitter/X">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-x w-5 h-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M4 4l11.733 16h4.267l-11.733 -16z"/>
          <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/>
        </svg>
        <span>Twitter</span>
      </a>
      <a href="https://github.com/jw-12138" target="_blank" class:list={{
        "mx-2 flex justify-center items-center gap-1": !aside,
        "mr-1 block mb-2 flex items-center gap-1": aside
      }} aria-label="Follow me on GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github w-5 h-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"/>
        </svg>
        <span>GitHub</span>
      </a>
    </div>
  </div>
  <div class="items-center flex mt-4" class:list={{
    "justify-center": !aside
  }}>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-copyright w-4 h-4 mr-1"
         viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
         stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
      <path d="M14 9.75a3.016 3.016 0 0 0 -4.163 .173a2.993 2.993 0 0 0 0 4.154a3.016 3.016 0 0 0 4.163 .173"/>
    </svg>
    <span class="copy_right_year">{year}</span>&nbsp;&nbsp;<a href="https://jw1.dev">一个球的博客</a>
  </div>
</footer>
