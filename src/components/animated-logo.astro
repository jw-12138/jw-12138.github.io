<script>
  import anime from 'animejs/lib/anime.es.js'
  import {isInViewport} from "./wakatime.jsx"

  async function move() {
    while (!isInViewport(document.getElementById('animated_logo'))) {
      await new Promise(resolve => setTimeout(resolve, 100))
    }

    let tl = anime.timeline({
      easing: 'easeInOutSine'
    })

    tl
      .add({
        targets: '#animated_logo path',
        strokeDashoffset: [anime.setDashoffset, 0],
        duration: 1500,
        easing: 'easeInOutSine',
        delay: function (el, i) {
          return i * 500
        },
        direction: 'alternate'
      })
      .add({
        targets: '#animated_logo path',
        strokeOpacity: [1, 0],
        duration: 1000
      })
      .add({
        targets: '#animated_logo',
        fillOpacity: [0, 1],
        duration: 1000
      }, '-=1250')
  }

  move()
</script>
